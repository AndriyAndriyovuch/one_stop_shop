<%= form_with url: update_amount_product_to_cart_path(product, action_type: "update_amount"), method: :post do |f| %>
  <%= f.number_field :amount, class:'input-field w-24 h-9 inline-block', value:session.dig(:products, product.id.to_s) %>
  <%= f.submit "Change amount", class:"btn-black" %>
<% end %>
