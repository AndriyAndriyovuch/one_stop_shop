<%= form_with url: change_amount_path(product), method: :post do |form| %>
  <%= form.hidden_field :update_action, value: 'change' %>
  <%= form.number_field :amount, class:'input-field w-[100px] h-[37px] inline-block', value:session.dig(:products, product.id.to_s) %>
  <%= form.submit "Change amount", class:"black-button" %>
<% end %>
