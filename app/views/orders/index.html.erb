<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-left text-sm font-light">

          <thead class="border-b font-medium dark:border-neutral-500">
            <tr>
              <% table_title.each do |item| %>
                <th scope="col" class="px-6 py-4"><%= item %></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% session_products.each do |product| %>
              <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                <td class="whitespace-nowrap px-6 py-4 font-medium"><%= session_products.index(product) + 1 %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= product.name %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= '%.2f' % product.price %></td>
                <td class="whitespace-nowrap px-6 py-4"><%=  session[:products][product.id.to_s] %></td>
                <td class="whitespace-nowrap px-6 py-4"><%= '%.2f' % select_sum(product) %></td>
                <td class="whitespace-nowrap px-6 py-4">

                <%= button_to cancel_shipping_path(product), method: :delete do %>
                    <i class="fa fa-regular fa-trash fa-2x"></i>
                <% end %>
                </td>

              </tr>
            <% end %>
            <tr class="border-b dark:border-neutral-500">
              <td colspan="4" class="whitespace-nowrap px-6 py-2">
                Total sum
              </td>
              <td class="whitespace-nowrap px-6 py-2"><%= total_sum %></td>
            </tr>
          </tbody>
        </table>

        <% if session_products.any? %>
          <div id="order-form m-5">
              <%= link_to 'Pay this order', new_order_path, class: "inline-block rounded bg-neutral-800 px-6 pb-2 pt-2.5 text-xl font-medium uppercase leading-normal text-neutral-50" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
