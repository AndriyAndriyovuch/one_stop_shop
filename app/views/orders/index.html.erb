<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">

        <% if @orders.present? %>
          <table class="min-w-full text-left text-sm font-light">
            <thead class="border-b font-medium dark:border-neutral-500">
              <tr>
                <th scope="col" class="px-6 py-4">â„–</th>
                <th scope="col" class="px-6 py-4">Date</th>
                <th scope="col" class="px-6 py-4">Sum</th>
              </tr>
            </thead>
              <tbody>
                <% @orders.each do |order| %>
                  <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                    <td class="whitespace-nowrap px-6 py-4 font-medium"><%= order.id %></td>
                    <td class="whitespace-nowrap px-6 py-4"><%= order.created_at.strftime("%Y-%m-%d, %H:%M") %></td>
                    <td class="whitespace-nowrap px-6 py-4"><%= number_to_currency(order.total_sum) %></td>
                    <td class="whitespace-nowrap px-6 py-4">
                      <%= link_to order_path(order) do %>
                          <i class="fa-solid fa-arrow-up-right-from-square fa-2xl"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        <% else %>
          <div class="grid h-screen place-items-center text-3xl">Your didn't buy anything yet</div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
