<%= form_with url: change_amount_path, method: :post do |form| %>
  <%= form.hidden_field :product_id, value: product.id %>
  <%= form.number_field :amount, class:'input-field w-[100px] h-[37px] inline-block', value:session.dig(:products, product.id.to_s) %>
  <%= form.submit "Add to cart", class:"black-button" %>
<% end %>
