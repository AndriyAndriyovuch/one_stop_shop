<%= simple_form_for @order, defaults: { input_html: { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-2/3' } } do |f| %>
  <%= render 'layouts/error', item: order %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :address %>
  <%= f.input :phone %>

  <%= f.button :submit, class: 'rounded-lg py-3 my-5 ms-2 px-5 bg-neutral-800 text-white inline-block font-medium cursor-pointer' %>
<% end %>
