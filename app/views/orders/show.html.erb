<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="flex flex-col text-base text-neutral-600 dark:text-neutral-900">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
          <div class="overflow-hidden">
            <div class="block rounded-lg bg-white p-6 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-300">
              <ul class="ms-6 w-96">
                <h1 class="font-bold text-3xl mb-5">Order â„–<%= @order.id %></h1>
            <li class="mb-4"><%= full_name(@order) %></li>
            <li class="mb-4"><%= @order.address %></li>
            <li class="mb-4"><%= @order.phone %></li>
          </ul>

              <table class="min-w-full text-left text-sm font-light">

                <thead class="border-b font-medium dark:border-neutral-500">
                  <tr>
                    <% table_title.each do |item| %>
                      <th scope="col" class="px-6 py-4"><%= item %></th>
                    <% end %>
                  </tr>
                </thead>

                <tbody>
                  <% @order.products.each.with_index(1) do |product, index| %>
                    <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                      <td class="cart-item font-medium"><%= index %></td>
                      <td class="cart-item"><%= product.name %></td>
                      <td class="cart-item"><%= number_to_currency(product.price) %></td>
                      <td class="cart-item"><%= select_amount(@order, product) %></td>
                      <td class="cart-item"><%= number_to_currency(order_product_sum(@order, product)) %></td>
                    </tr>
                  <% end %>
                  <tr class="border-b dark:border-neutral-500">
                    <td colspan="4" class="whitespace-nowrap px-6 py-2">
                      Total sum
                    </td>
                    <td class="whitespace-nowrap px-6 py-2"><%= order_total_sum(@order) %></td>
                  </tr>

                </tbody>
              </table>
          </div>
          </div>
        </div>
      </div>
    </div>


    <%= link_to 'Edit this order', edit_order_path(@order), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this order', order_path(@order), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to products', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
