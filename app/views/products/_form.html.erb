<%= simple_form_for @product, defaults: { input_html: { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-2/3' } } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :balance %>

  <%= f.button :submit, class: 'black_button ms-2 mb-5 p-5' %>
<% end %>
