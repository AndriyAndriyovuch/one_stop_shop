<div class="w-full p-1 md:p-2">
  <div id="<%= dom_id product %>">
    <p class="my-5 font-semibold text-3xl truncate">
      <%= product.name %>
    </p>

    <p class="my-5 <%= truncate? %>">
      <%= product.description %>
    </p>

    <p class="my-5">
      Price: <%= number_to_currency(product.price, precision: 2) %>
    </p>

    <p class="my-5">
      Available: <%= product.balance %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this product", product, class:"black_button" %>
      <hr class="mt-6">
    <% end %>

    <div class="relative mb-3">
        <% if product.balance.positive? %>
          <%= form_with url: buy_path, method: :post do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
            <%= form.number_field :amount, class:'w-[100px] h-[37px]' %>
            <%= form.submit "Add to cart", class:"black_button" %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
