<div class="mx-auto">
  <div class="w-full p-1 md:p-2 m-5">
    <div class="grid gap-4 grid-cols-1">
      <p class="font-semibold text-3xl text-center">
        <%= @product.name %>
      </p>

      <p>
        <%= @product.description %>
      </p>

      <p>
        Price: <%= number_to_currency(@product.price, unit: "â‚´ ") %>
      </p>

      <p>
        Available: <%= @product.balance %>
      </p>
    </div>

    <div class="relative mb-3">
      <% if @product.balance.nonzero? %>
        <%= render "cart/buy_form", product: @product %>
      <% else %>
        <p class="text-3xl text-grey-400 mt-3">Out of stock</p>
      <% end %>
    </div>

    <div class="inline-block">
      <%= link_to 'Back to products', products_path, class: "btn-grey" %>
    </div>

  </div>
</div>
